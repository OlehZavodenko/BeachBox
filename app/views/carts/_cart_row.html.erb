<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h4><%= product.product_name %></h4>
    </div>
    <div class="col-xs-4">

      <%= form_for order_item, remote: true do |f| %>
        <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency order_item.unit_price %></span></h4>
        <div class="row">
          <div class="col-xs-4">
            <%= f.number_field :orderitems_quantity, value: order_item.orderitems_quantity.to_i, class: "form-control number", min: 1 %>
            <%= f.hidden_field :product_id, value: product.id %>
          </div>
          <div class="col-xs-8 text-right">
            <div class="btn-group">
              <%= f.submit "Update Quantity", class: "btn btn-primary"%>
              <%= link_to(
                "Destroy",
                order_item,
                  method: :delete,
                  action: :remove,
                  remote: true,
                  data: { confirm: 'Are you sure?'},
                  class: "btn btn-danger",
                    id: "danger"
                ) %>

            </div>
          </div>
        </div>
        <h4 class="text-right subtotal">Total Price: <span style="color: green"><%= number_to_currency order_item.total_price %></span></h4>
      <% end %>
    </div>

  </div>
</div>
