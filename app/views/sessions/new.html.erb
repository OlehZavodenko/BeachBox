<h1>Login</h1>
<%= form_tag '/login' do %>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email, nil, autofocus: true %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div>
    <%= submit_tag "Log In", class: "btn btn-outline-warning" %>
  </div>
<% end %>