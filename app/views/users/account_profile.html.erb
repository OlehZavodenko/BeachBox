<div class="container">
    <h1>Edit Profile</h1>
    <hr>

<% @user = current_user %>
<%= form_for @user, url: user_path(:id => current_user.id), method: 'PATCH' do |f| %>
  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>    
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :class => "form-control" %>
  </div>
  <div>
    <%= f.submit "Update!" %>
  </div>
<% end %>
