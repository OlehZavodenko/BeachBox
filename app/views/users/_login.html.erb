<div id="login-modal1">
  <%= form_tag '/login' do %>
    <div>
      <%= label_tag :email, "Email:" %><br>
      <%= text_field_tag :email, nil, autofocus: true %>
    </div>

    <div>
      <%= label_tag :password, "Password:" %><br>
      <%= password_field_tag :password%>
    </div>

    <br>

    <div>
      <%= submit_tag "Log In", class: "btn btn-outline-warning" %>
    </div>
  <% end %>
</div>