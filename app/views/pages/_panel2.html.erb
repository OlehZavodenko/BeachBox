<div class="panel panel-default" >
  <div class="panel-heading" >

    <h4 class="panel-title">
      <div data-toggle="" data-parent="#accordion" href="#collapse2">
        How many people?</div>
      </h4>

    </div>

    <!-- Panel 2 body -->
    <div id="collapse2" class="panel-collapse collapse" >
      <div class="panel-body" >

        <div class="form-group">
          <div class="counter-adult">
          <label class="control-label col-md-5"><strong>Adult</strong><br> <i> (above 13)</i></label>
          <section class="counter"><div class="input-group number-spinner col-md-7">
            <span class="input-group-btn">
              <a class="btn btn-danger" data-dir="dwn"><span class="glyphicon glyphicon-minus"></span></a>
            </span>
            <input type="text" disabled name="adult" id="adult" class="form-control text-center" value="1" max=9 min=1>
            <span class="input-group-btn">
              <a class="btn btn-info" data-dir="up"><span class="glyphicon glyphicon-plus"></span></a>
            </span>
            </div>

          </section>
          </div>

        </div>


        <div class="form-group">
          <div class="counter-child">
          <label class="control-label col-md-5"><strong>Child</strong><br> <i> (1 - 13)</i></label>
          <section class="counter"><div class="input-group number-spinner col-md-7">
            <span class="input-group-btn">
              <a class="btn btn-danger" data-dir="dwn"><span class="glyphicon glyphicon-minus"></span></a>
            </span>
            <input type="text" disabled name="child" id="child" class="form-control text-center" value="0" max=9 min=0>
            <span class="input-group-btn">
              <a class="btn btn-info" data-dir="up"><span class="glyphicon glyphicon-plus"></span></a>
</div>
            </section>
          </div>

         <span data-tooltip="Changes will be lost."><button type="button" class="btn btn-primary" id="back-to-1">Back</button></span>
          <button type="button" class="btn btn-primary" id="entered-quantity" value='hide/show'>Next</button>
</div>
        </div>
      </div>
    </div>
